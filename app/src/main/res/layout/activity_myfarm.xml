<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myfarmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Tom"
                android:textColor="#ffffff"
                android:textSize="25dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/adoretv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_favorite_pink"
                    android:text = "0"
                    android:textSize="12dp"
                    android:drawablePadding="6dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="austin 농장"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>



                <TextView
                    android:id="@+id/tempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="온도 : 00.0도"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/humiditeText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/humiditeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="습도 : 000%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/luxText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tempText" />

                <TextView
                    android:id="@+id/luxText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="조도 : 000 lux"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/humiditeText" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="#989A97">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="나주 A농장(배)"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="온도 :   27.5도"
                    android:layout_marginTop="25dp"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="습도 :   67%"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="조도 :   600 lux"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>



            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:background="#f1f4f7">

                <Button
                    android:id="@+id/managebtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_baseline_build_24"
                    android:background="@drawable/custom_ripple_etc"
                    android:drawablePadding="-20dip"
                    android:paddingTop="25dip"
                    android:text="수동 조절하기"
                    android:textSize="14dp"
                    android:textStyle="bold">

                </Button>
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_baseline_build_24"

                    android:text="수동조절하기"
                    android:layout_marginTop="28dp"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:orientation="vertical"
             >


                <Button
                    android:id="@+id/adorebtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="예뻐해주기"
                    android:drawableTop="@drawable/ic_sharp_favorite_24"
                    android:paddingTop="25dip"
                    android:background="@drawable/custom_ripple_effect"
                    android:drawablePadding="-20dip">
                </Button>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_sharp_favorite_24"

                    android:text="예뻐해주기"
                    android:layout_marginTop="28dp"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ripple_etc"
                    android:id="@+id/chart_btn"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Histroy"
                    android:drawableTop="@drawable/ic_baseline_show_chart_24"
                    android:paddingTop="25dip"
                    android:drawablePadding="-20dip">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="110dp"
                android:background="#f1f4f7">
                <Button
                    android:id="@+id/history_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="농장 상황"
                    android:drawableTop="@drawable/ic_baseline_emoji_nature_24"
                    android:background="@drawable/custom_ripple_etc"
                    android:paddingTop="25dip"
                    android:drawablePadding="-20dip">

                </Button>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>